<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.st.cs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="Class Scheduler" >
        <activity
            android:name="com.st.cs.ListBatchesActivity"
            android:label="List Of Batches" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.st.cs.AddBatchActivity"
            android:label="Add Batch" />
        <activity
            android:name="com.st.cs.ListClassesActivity"
            android:label="List Classes" />
        <activity
            android:name="com.st.cs.AddClassActivity"
            android:label="Add Class" />
        <activity
            android:name="com.st.cs.UpdateBatchActivity"
            android:label="Update Batch" />
        <activity
            android:name="com.st.cs.UpdateClassActivity"
            android:label="Update Class" />

        <service
            android:name="com.android.tools.fd.runtime.InstantRunService"
            android:exported="true" />
    </application>

</manifest>